{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping for monorepo */
    "baseUrl": ".",
    "paths": {
      "@davdevs/paper-foundations": ["./packages/foundations/src"],
      "@davdevs/paper-foundations/*": ["./packages/foundations/src/*"],
      "@davdevs/paper-basic": ["./packages/basic/src"],
      "@davdevs/paper-basic/*": ["./packages/basic/src/*"],
      "@davdevs/paper-premium": ["./packages/premium/src"],
      "@davdevs/paper-premium/*": ["./packages/premium/src/*"],
      "@davdevs/paper-core": ["./packages/core/src"],
      "@davdevs/paper-core/*": ["./packages/core/src/*"]
    }
  },
  "include": ["packages/*/src"]
}