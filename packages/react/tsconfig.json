{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "../basic/src/**/*",
    "../premium/src/**/*",
    "../foundations/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}